== Intersects ==
-
bool Collidable::Intersects(float x, float y) {
  Dimension* d = static_cast<Dimension*>(_owner->GetFeature("Dimension"));
  assert(NULL != d);
  return d->GetX() - d->GetWidth() / 2 <= x &&
         d->GetX() + d->GetWidth() / 2 >= x &&
         d->GetY() - d->GetHeight() / 2 <= y &&
         d->GetY() + d->GetHeight() / 2 >= y;
}
